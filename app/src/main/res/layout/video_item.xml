<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/video_item_height"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_marginHorizontal="@dimen/video_item_image_view_margin_horizontal"
        android:id="@+id/video_item_image_view"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="match_parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/video_item_size"
        android:layout_height="@dimen/video_item_size"
        android:tint="@color/white"
        android:clickable="false"
        android:src="@drawable/ic_baseline_play_circle_outline_24"
        app:layout_constraintTop_toTopOf="@id/video_item_image_view"
        app:layout_constraintBottom_toBottomOf="@id/video_item_image_view"
        app:layout_constraintLeft_toLeftOf="@id/video_item_image_view"
        app:layout_constraintRight_toRightOf="@id/video_item_image_view"/>



</androidx.constraintlayout.widget.ConstraintLayout>